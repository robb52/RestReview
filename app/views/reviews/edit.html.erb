<div class="col-6 offset-3">

  <div class="edit-review">

    <h1>Edit Review</h1>

    <%= simple_form_for([@restaurant, @review]) do |f| %>
      <div id="rating-form" %>
        <label>Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit, class: "btn btn-outline-primary" %>
      <% end %>
  </div>

  <%= link_to "Back", root_path(@restaurant) %>

</div>

  <script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>