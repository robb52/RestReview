<div class="review-section">
 <div class="review-rating" data-score="<%= review.rating %>"></div>
  <p class="review-comment"><%= review.comment %></p>
 
  <% if user_signed_in? %>
    <% if review.user_id == current_user.id %>

      <div class="btn-group">
        <%= link_to "Edit", edit_restaurant_review_path(review.restaurant, review), class: "btn btn-outline-primary btn-sm" %>
        <%= link_to "Delete", restaurant_review_path(review.restaurant, review), class: "btn btn-outline-primary btn-sm",  method: :delete, dats: {confrim: "Are you sure?"} %>
      </div>
    <% end %>
  <% end %>

</div>